{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@expoversal/chat-client-components": [
        "libs/chat-client-components/src/index.ts"
      ],
      "@expoversal/graphql-gateway-service": [
        "libs/graphql/gateway-service/src/index.ts"
      ],
      "@expoversal/graphql-message-service": [
        "libs/graphql/message-service/src/index.ts"
      ],
      "@expoversal/graphql-message-subscription-service": [
        "libs/graphql/message-subscription-service/src/index.ts"
      ],
      "@expoversal/graphql-user-service": [
        "libs/graphql/user-service/src/index.ts"
      ],
      "@expoversal/kafka-pub-sub": ["libs/kafka-pub-sub/src/index.ts"],
      "@expoversal/pothos-types": ["libs/graphql/pothos/index.ts"],
      "@expoversal/prisma-clients": ["libs/prisma-clients/index.ts"],
      "@expoversal/prisma-clients/*": ["libs/prisma-clients/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
