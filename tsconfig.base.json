{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@expoversal/graphql-message-service": [
        "libs/graphql/message-service/src/index.ts"
      ],
      "@expoversal/graphql-user-service": [
        "libs/graphql/user-service/src/index.ts"
      ],
      "@expoversal/pothos-types": [
        "libs/graphql/pothos/index.ts"
      ],
      "@expoversal/prisma-clients": [
        "libs/prisma-clients/index.ts"
      ],
      "@expoversal/prisma-clients/*": [
        "libs/prisma-clients/*"
      ],
      "@expoversal/graphql-gateway-service": [
        "libs/graphql/gateway-service/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}